@model IEnumerable<SalesWebMvc.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>
<p>Sellers index page</p>
<table class="table tablet-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var intem in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => intem.Name);
            </td>
            <td>
                @Html.DisplayFor(modelItem => intem.Email);
            </td>
            <td>
                @Html.DisplayFor(modelItem => intem.BirthDate);
            </td>
            <td>
                @Html.DisplayFor(modelItem => intem.BaseSalary);
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@intem.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@intem.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@intem.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>